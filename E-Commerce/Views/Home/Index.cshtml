                            <div class="section-header">
                                <h2>@Model.Static.Event</h2>
                                <p>@Model.Static.eventTitle <span>@Model.Static.eventTitle2</span> @Model.Static.eventTitle3</p>
                            </div>

                            @foreach (var obj in Model.events)
                            {
                                <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide event-item d-flex flex-column justify-content-end" style="background-image: url(@obj.eventPicture)">
                                            <h3>@obj.eventName</h3>
                                            <div class="price align-self-start">$@obj.eventPrice</div>
                                            <p class="description">
                                                @obj.eventDescription
                                            </p>
                                        </div>
