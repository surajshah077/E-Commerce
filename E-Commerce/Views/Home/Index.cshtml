                                <h4>@Model.Static.MenuTopic1</h4>
                            </a>
                        </li><!-- End tab nav item -->

                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" data-bs-target="#menu-breakfast">
                                <h4>@Model.Static.MenuTopic2</h4>
                            </a><!-- End tab nav item -->

