                {

                    <div class="section-header">
                        <h2>@Model.Static.Menu</h2>
                        <p>@Model.Static.MenuTitle <span>@Model.Static.MenuTitle2</span></p>
                    </div>

                    <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">

                        <li class="nav-item">
