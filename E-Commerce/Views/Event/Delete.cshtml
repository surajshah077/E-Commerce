@model Event
<form asp-action="Delete" asp-controller="Event" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="EventId" />
    <input type="hidden" asp-for="eventPicture" />
    <div class="mb-3">
        <label for="eventName" class="form-label">eventName</label>
        <input type="text" asp-for="eventName" class="form-control" id="eventName" aria-describedby="eventName">
    </div>
    <div class="mb-3">
        <label for="eventPrice" class="price-tag">eventPrice</label>
        <input type="number" asp-for="eventPrice" class="form-control" id="eventPrice" aria-describedby="eventPrice">
    </div>
    <div class="mb-3">
        <label for="eventDescription" class="form-label">eventDescription</label>
        <textarea type="text" asp-for="eventDescription" class="form-control" id="eventDescription" aria-describedby="eventDescription"></textarea>
    </div>
    <button type="submit" class="btn bnt-primary">Delete</button>
    <a asp-action="Index" asp-controller="Event">Back To List</a>
</form>