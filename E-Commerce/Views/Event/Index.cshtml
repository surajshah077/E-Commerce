@model List<Event>
<table class="table">
    <thead>
        <tr>
            <th scope="col">eventName</th>
            <th scope="col">eventPrice</th>
            <th scope="col">eventDescription</th>
            <th scope="col">eventPicture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.eventName</td>
                <td>@obj.eventPrice</td>
                <td>@obj.eventDescription</td>
                <td><img src="~/@obj.eventPicture" style="height:100px"; width="100px"></td>
              <td>
                    <a asp-action="Edit" asp-controller="Event" asp-route-id="@obj.EventId">Edit</a>
                    <a asp-action="Delete" asp-controller="Event" asp-route-id="@obj.EventId">Delete</a>
                </td>
            </tr>
        }
        <a asp-action="Create" asp-controller="Event" class="btn btn-primary">Create</a>
    </tbody>
</table>